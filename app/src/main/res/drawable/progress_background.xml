<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/progressBackgroundLayer">
        <shape>
            <corners android:radius="8dp"/>
            <solid android:color="#BCF3DA" />
        </shape>
    </item>

    <item android:id="@+id/progressLayer"
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        >
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="8dp"/>
            </shape>
        </scale>
    </item>
</layer-list>
